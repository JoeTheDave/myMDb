{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production tsx src/server/main.ts",
    "tailwind": "npx tailwindcss -i ./src/client/styles/index.css -o ./src/client/styles/tailwind.css",
    "build": "run-s \"build:*\"",
    "build:vite": "vite build",
    "build:css": "npm run tailwind -- --minify",
    "dev": "run-p \"dev:*\"",
    "dev:vite": "nodemon -w src/server -x tsx src/server/main.ts",
    "dev:css": "npm run tailwind -- --watch"
  },
  "prisma": {
    "schema": "./src/server/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "lucide-react": "^0.378.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.14.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.3.0",
    "typescript": "^5.3.2",
    "vite-express": "*"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.7",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.3",
    "@types/react": "^18.0.38",
    "@types/react-dom": "^18.2.16",
    "@vitejs/plugin-react": "^4.2.0",
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.4.3",
    "vite": "^5.0.2"
  }
}
